<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activities.InfoActivity" android:background="#FFFFFF">

    <ImageView
            android:id="@+id/ac_logo"
            android:layout_width="0dp"
            android:layout_height="100dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@drawable/header_logo"
            app:layout_constraintHorizontal_bias="1.0"
            android:background="@color/white"
            app:layout_constraintTop_toTopOf="parent"/>
    <TextView
            android:text="Almost there..."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/ac_header" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:textSize="15dp"
            android:textColor="@color/dark_gray" app:layout_constraintTop_toBottomOf="@+id/ac_logo"
            android:layout_marginTop="15dp"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_car"
            android:id="@+id/ac_car_icon" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ac_header" android:layout_marginTop="15dp"/>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ac_group_1"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:gravity="center_horizontal|center_vertical" app:layout_constraintTop_toBottomOf="@+id/ac_car_icon"
            android:layout_marginTop="15dp">
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/ac_group_1_container"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
                android:gravity="center_horizontal|center_vertical" app:layout_constraintTop_toBottomOf="@+id/textView6"
                android:layout_weight="1">
            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_blue_location"
                    android:id="@+id/ac_group_1_container_1_icon"
                    android:layout_weight="1"/>
            <TextView
                    android:text="22 kWh"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/ac_group_1_container_1_text"
                    android:layout_weight="1"
                    android:textSize="18dp" android:textColor="@color/blue"
                    android:layout_marginLeft="10dp" android:layout_marginStart="10dp"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ac_group_2"
            android:gravity="center_horizontal|center_vertical"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ac_group_1" android:layout_marginTop="5dp">
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/ac_group_2_container_1"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
                android:gravity="center_horizontal|center_vertical"
                app:layout_constraintTop_toBottomOf="@+id/textView6"
                android:layout_weight="1" android:layout_marginRight="10dp" android:layout_marginEnd="10dp"
                android:layout_gravity="center" android:foregroundGravity="center">
            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/small_wheel"
                    android:id="@+id/ac_group_2_container_1_icon"
                    android:layout_weight="1"/>
            <TextView
                    android:text="AC1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/ac_group_2_container_1_text"
                    android:layout_weight="1"
                    android:textSize="25dp" android:textColor="@color/dark_gray"
            />
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/ac_group_2_container_2"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
                android:gravity="center_horizontal|center_vertical" app:layout_constraintTop_toBottomOf="@+id/textView6"
                android:layout_weight="1" android:layout_marginLeft="10dp" android:layout_marginStart="10dp">
            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_lightning"
                    android:id="@+id/ac_group_2_container_2_icon"
                    android:layout_weight="1" android:layout_marginRight="10dp" android:layout_marginEnd="10dp"/>
            <TextView
                    android:text="22 kWh"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/ac_group_2_container_2_text"
                    android:layout_weight="1"
                    android:textSize="25dp" android:textColor="@color/dark_gray"
            />
        </LinearLayout>
    </LinearLayout>
    <TextView
            android:text="Current time: 2hrs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/ac_current_time" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            android:textSize="10dp" android:textColor="@color/dark_gray"
            app:layout_constraintTop_toBottomOf="@+id/ac_group_2" android:layout_marginTop="5dp"/>
    <TextView
            android:text="Connected"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/ac_connection_status"
            android:textSize="15dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:textColor="@color/green"
            app:layout_constraintTop_toBottomOf="@+id/ac_current_time" android:layout_marginTop="15dp"/>
    <androidx.cardview.widget.CardView
            android:onClick="sendRequest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:cardCornerRadius="20dp" app:cardBackgroundColor="@color/light_red"
            app:layout_constraintTop_toBottomOf="@+id/ac_connection_status" android:id="@+id/ac_stop_button"
            android:layout_marginTop="15dp">
        <LinearLayout android:layout_width="wrap_content" android:layout_height="60dp" android:paddingLeft="30dp"
                      android:paddingRight="30dp" android:id="@+id/ac_stop_button_container">
            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_line_8"
                    android:id="@+id/ac_stop_button_container_icon"
                    android:layout_weight="1" android:layout_marginRight="10dp" android:layout_marginEnd="10dp"
                    android:layout_gravity="center"/>
            <TextView
                    android:textAlignment="center"
                    android:text="Stop Charging"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/ac_stop_button_container_text"
                    android:layout_gravity="center" android:textColor="#FFFFFF" android:textSize="14dp"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <TextView
            android:text="Having Issues?"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/ac_troubleshooting" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:textSize="10dp" android:layout_margin="5dp"
            android:textColor="@color/blue" app:layout_constraintTop_toBottomOf="@+id/ac_stop_button"/>
</androidx.constraintlayout.widget.ConstraintLayout>